<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <View
        android:id="@+id/view_app_prog_upper"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grey4a"
        app:layout_constraintBottom_toTopOf="@+id/iv_status"
        app:layout_constraintEnd_toEndOf="@+id/iv_status"
        app:layout_constraintStart_toStartOf="@+id/iv_status"
        app:layout_constraintTop_toTopOf="@+id/cl_approval_prog_desc" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="12dip"
        android:layout_height="12dip"
        android:src="@drawable/ic_bullet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_app_prog_lower"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/grey4a"
        app:layout_constraintBottom_toBottomOf="@+id/cl_approval_prog_desc"
        app:layout_constraintEnd_toEndOf="@+id/iv_status"
        app:layout_constraintStart_toStartOf="@+id/iv_status"
        app:layout_constraintTop_toBottomOf="@+id/iv_status" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_approval_prog_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_status"
        app:layout_constraintStart_toEndOf="@+id/iv_status"
        app:layout_constraintTop_toTopOf="@+id/iv_status">

        <TextView
            android:id="@+id/tv_approval_dept"
            style="@style/BoldLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approval Dept"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_approval_name"
            style="@style/LabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approval Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_approval_dept" />

        <TextView
            android:id="@+id/tv_approval_date"
            style="@style/LabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approval Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_approval_dept" />

        <TextView
            android:id="@+id/tv_upper_view"
            style="@style/BoldLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/tv_approval_dept"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>