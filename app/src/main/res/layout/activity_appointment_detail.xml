<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.hino.hearts.ui.appointment.AppointmentDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.appointment.AppointmentDetailActivity">

        <LinearLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimens_15dp"
            android:paddingEnd="@dimen/dimens_15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:backgroundTint="#CF0000"
                android:onClick="@{() -> viewModel.onBackPressed()}"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_appointment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:textSize="24sp"
            android:text="@string/appointment_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

        <TextView
            android:id="@+id/tv_appointment_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_8dp"
            android:text="@string/appointment_description"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_appointment_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_appointment_desc">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_acc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_acc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextInputLayoutHint"
                        android:hint="@string/appointment_account"
                        android:inputType="text"
                        android:text="@{viewModel.accountName}"/>

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dropdown"
                    app:layout_constraintBottom_toBottomOf="@id/tl_acc_name"
                    app:layout_constraintEnd_toEndOf="@+id/tl_acc_name"
                    app:layout_constraintTop_toTopOf="@+id/tl_acc_name" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_opportunity_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_acc_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_opportunity_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/appointment_opportunity"
                        android:focusable="false"
                        android:text="@{viewModel.opportunity}"
                        android:enabled="@{viewModel.opportunityEnabled}"
                        android:theme="@style/TextInputLayoutHint"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dropdown"
                    app:layout_constraintBottom_toBottomOf="@id/tl_opportunity_field"
                    app:layout_constraintEnd_toEndOf="@+id/tl_opportunity_field"
                    app:layout_constraintTop_toTopOf="@+id/tl_opportunity_field" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_opportunity_field">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/appointment_activity_detail"
                        android:theme="@style/TextInputLayoutHint"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:maxLines="5"
                        android:minLines="1"
                        android:scrollbars="vertical"
                        android:text="@{viewModel.activityDetail}"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:background="@drawable/rounded_red_button"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:onClick="@{() -> viewModel.onSavePressed()}"
                    app:layout_constraintCircleRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_activity"
                    app:layout_constraintWidth_percent="0.7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>