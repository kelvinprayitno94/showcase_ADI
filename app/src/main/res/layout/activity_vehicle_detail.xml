<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.hino.hearts.ui.account.detail.vehicles.vehicleDetail.VehicleDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.approval.category.ApprovalTabActivity">

        <include layout="@layout/main_toolbar" />

        <TextView
            android:id="@+id/tv_edit_account_title"
            style="@style/PageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Category"
                        android:text="@{viewModel.categoryLiveData}"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/iv_vehicle_cate_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_category"
                    app:layout_constraintEnd_toEndOf="@+id/tl_category"
                    app:layout_constraintTop_toTopOf="@+id/tl_category" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_type_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_category">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_type_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Type Unit"
                        android:text="@{viewModel.typeLiveData}"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/iv_vehicle_type_unit_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_type_unit"
                    app:layout_constraintEnd_toEndOf="@+id/tl_type_unit"
                    app:layout_constraintTop_toTopOf="@+id/tl_type_unit" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_serial_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_type_unit">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_serial_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Serial Number"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_save_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:background="@drawable/rounded_red_button"
                    android:text="Save"
                    android:textColor="@color/white"
                    app:layout_constraintCircleRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_serial_no"
                    app:layout_constraintWidth_percent="0.7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>