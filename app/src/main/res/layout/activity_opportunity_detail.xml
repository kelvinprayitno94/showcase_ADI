<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity">
    <data>
        <variable name="viewModel" type="com.hino.hearts.ui.opportunity.detail.OpportunityDetailViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimens_15dp"
            android:paddingEnd="@dimen/dimens_15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:backgroundTint="#CF0000"
                android:onClick="@{() -> viewModel.onBackPressed()}"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_opportunities_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.opportunityName, default=`Opportunity Detail`}"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_opportunity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimens_8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_opportunities_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_opportunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#CF0000" />

        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@color/white"
            android:backgroundTint="@color/red"
            android:layout_margin="@dimen/dimens_24dp"
            android:onClick="@{() -> viewModel.onAddPressed()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout_add_visit_button"
            layout="@layout/layout_add_visit_buttons"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            tools:visibility="gone" />

        <include
            android:id="@+id/layout_custom_loading"
            layout="@layout/layout_custom_loading"
            android:visibility="gone"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>