<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/tv_adapter_approval_doc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_bot_indicator"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/tv_adapter_approval_doc_type"
        app:layout_constraintStart_toStartOf="@+id/tv_adapter_approval_doc_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_approval_doc_type"
        app:layout_constraintWidth_max="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>