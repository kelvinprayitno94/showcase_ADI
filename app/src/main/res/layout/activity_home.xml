<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.hino.hearts.ui.home.HomeViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        tools:context=".ui.home.HomeActivity"
        tools:openDrawer="start">

        <include
            layout="@layout/app_bar_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="@dimen/dimens_300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nv_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:nestedScrollingEnabled="true"
                app:elevation="-2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/fl_close"
                        android:layout_width="@dimen/dimens_44dp"
                        android:layout_height="@dimen/dimens_44dp"
                        android:layout_marginStart="@dimen/dimens_11dp"
                        android:layout_marginTop="@dimen/dimens_11dp">

                        <ImageView
                            android:layout_width="@dimen/dimens_30dp"
                            android:layout_height="@dimen/dimens_30dp"
                            android:layout_gravity="center"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_close"
                            android:tint="@color/red"
                            tools:ignore="contentDescription" />

                    </FrameLayout>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/nav_header_view"
                                layout="@layout/nav_header_view"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_pending_transaction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/nav_header_view">

                                <TextView
                                    style="@style/DescGrey36"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:text="@string/pending_transaction"
                                    app:layout_constraintBottom_toBottomOf="@id/fl_open_transaction"
                                    app:layout_constraintEnd_toStartOf="@id/fl_open_transaction"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/fl_open_transaction" />

                                <FrameLayout
                                    android:id="@+id/fl_open_transaction"
                                    android:layout_width="@dimen/dimens_32dp"
                                    android:layout_height="@dimen/dimens_32dp"
                                    android:layout_marginTop="@dimen/dimens_12dp"
                                    android:layout_marginEnd="@dimen/dimens_12dp"
                                    android:layout_marginBottom="@dimen/dimens_12dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="@dimen/dimens_16dp"
                                        android:layout_height="@dimen/dimens_16dp"
                                        android:layout_gravity="center"
                                        android:background="?android:attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/ic_navigate_next"
                                        tools:ignore="contentDescription" />

                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:background="@color/greye1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_privacy_prolicy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_pending_transaction">

                                <TextView
                                    style="@style/DescGrey36"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:text="@string/privacy_policy"
                                    app:layout_constraintBottom_toBottomOf="@id/fl_open_privacy"
                                    app:layout_constraintEnd_toStartOf="@id/fl_open_privacy"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/fl_open_privacy" />

                                <FrameLayout
                                    android:id="@+id/fl_open_privacy"
                                    android:layout_width="@dimen/dimens_32dp"
                                    android:layout_height="@dimen/dimens_32dp"
                                    android:layout_marginTop="@dimen/dimens_12dp"
                                    android:layout_marginEnd="@dimen/dimens_12dp"
                                    android:layout_marginBottom="@dimen/dimens_12dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="@dimen/dimens_16dp"
                                        android:layout_height="@dimen/dimens_16dp"
                                        android:layout_gravity="center"
                                        android:background="?android:attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/ic_navigate_next"
                                        tools:ignore="contentDescription" />

                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:background="@color/greye1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_help"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_privacy_prolicy">

                                <TextView
                                    style="@style/DescGrey36"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:text="@string/help"
                                    app:layout_constraintBottom_toBottomOf="@id/fl_open_help"
                                    app:layout_constraintEnd_toStartOf="@id/fl_open_help"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/fl_open_help" />

                                <FrameLayout
                                    android:id="@+id/fl_open_help"
                                    android:layout_width="@dimen/dimens_32dp"
                                    android:layout_height="@dimen/dimens_32dp"
                                    android:layout_marginTop="@dimen/dimens_12dp"
                                    android:layout_marginEnd="@dimen/dimens_12dp"
                                    android:layout_marginBottom="@dimen/dimens_12dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="@dimen/dimens_16dp"
                                        android:layout_height="@dimen/dimens_16dp"
                                        android:layout_gravity="center"
                                        android:background="?android:attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/ic_navigate_next"
                                        tools:ignore="contentDescription" />

                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:background="@color/greye1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_logout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimens_24dp"
                                app:layout_constraintBottom_toTopOf="@id/tv_app_version"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/cl_help"
                                app:layout_constraintVertical_bias="1">

                                <TextView
                                    style="@style/DescGrey36"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:text="@string/logout"
                                    app:layout_constraintBottom_toBottomOf="@id/fl_logout"
                                    app:layout_constraintEnd_toStartOf="@id/fl_logout"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/fl_logout" />

                                <FrameLayout
                                    android:id="@+id/fl_logout"
                                    android:layout_width="@dimen/dimens_32dp"
                                    android:layout_height="@dimen/dimens_32dp"
                                    android:layout_marginTop="@dimen/dimens_12dp"
                                    android:layout_marginEnd="@dimen/dimens_12dp"
                                    android:layout_marginBottom="@dimen/dimens_12dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:layout_width="@dimen/dimens_16dp"
                                        android:layout_height="@dimen/dimens_16dp"
                                        android:layout_gravity="center"
                                        android:background="?android:attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/ic_exit_to_app"
                                        android:tint="@color/red"
                                        tools:ignore="contentDescription" />

                                </FrameLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="@dimen/dimens_24dp"
                                    android:layout_marginEnd="@dimen/dimens_24dp"
                                    android:background="@color/greye1"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <TextView
                                android:id="@+id/tv_app_version"
                                style="@style/Desc12spGrey9b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimens_24dp"
                                android:layout_marginEnd="@dimen/dimens_24dp"
                                android:layout_marginBottom="@dimen/dimens_24dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:text="ver 1.0" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>
            </com.google.android.material.navigation.NavigationView>
        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>