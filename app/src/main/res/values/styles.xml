<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/grey4a</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Title">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonText14spRed">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">@dimen/dimens_8dp</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardWhite" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimens_8dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">@dimen/dimens_4dp</item>
    </style>

    <style name="CircularProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressDrawable">@color/colorSecondary</item>
        <item name="android:tint">@color/colorSecondary</item>
        <item name="android:indeterminate">false</item>
    </style>
</resources>
