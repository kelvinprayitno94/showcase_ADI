        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">@dimen/dimens_8dp</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlinedWhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="cornerRadius">@dimen/dimens_6dp</item>
        <item name="strokeWidth">@dimen/dimens_1dp</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CardWhite" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimens_8dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CardWhite20dp" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimens_20dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CircularProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressDrawable">@color/colorSecondary</item>
        <item name="android:tint">@color/colorSecondary</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/grey4a</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppereances</item>
    </style>

    <style name="TabLayoutTextAppereances" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
