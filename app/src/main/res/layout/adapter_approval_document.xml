<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="@dimen/dimens_15dp"
    android:paddingBottom="@dimen/dimens_15dp">

    <ImageView
        android:id="@+id/ic_green_dot"
        android:layout_width="@dimen/dimens_10dp"
        android:layout_height="@dimen/dimens_10dp"
        android:layout_marginLeft="@dimen/dimens_4dp"
        android:src="@drawable/ic_bullet_green"
        app:layout_constraintBottom_toBottomOf="@+id/tv_adapter_approval_acc_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_adapter_approval_acc_company"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_adapter_approval_acc_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_4dp"
        android:text="Pt dihardja"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ic_green_dot"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_adapter_approval_acc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_4dp"
        android:layout_marginTop="5dp"
        android:text="Document type"
        app:layout_constraintStart_toEndOf="@+id/ic_green_dot"
        app:layout_constraintTop_toBottomOf="@+id/tv_adapter_approval_acc_company" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        app:layout_constraintBottom_toBottomOf="@+id/tv_adapter_approval_acc_name"
        app:layout_constraintStart_toEndOf="@+id/tv_adapter_approval_acc_name"
        app:layout_constraintTop_toTopOf="@+id/tv_adapter_approval_acc_name" />

    <TextView
        android:id="@+id/tv_adapter_approval_doc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Document type"
        app:layout_constraintBottom_toBottomOf="@+id/tv_adapter_approval_acc_name"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="@+id/tv_adapter_approval_acc_name" />

    <ImageView
        android:id="@+id/iv_right_arrow"
        android:layout_width="@dimen/dimens_30dp"
        android:layout_height="@dimen/dimens_30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>