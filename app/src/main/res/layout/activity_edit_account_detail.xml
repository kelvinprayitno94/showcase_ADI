<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.hino.hearts.ui.account.detail.accDetail.editAccount.EditAccountDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.approval.category.ApprovalTabActivity">

        <include layout="@layout/main_toolbar" />

        <TextView
            android:id="@+id/tv_edit_account_title"
            style="@style/PageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Account Details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/dimens_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_edit_account_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_acc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_acc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Account Name"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_business_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_acc_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_business_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Business Field"
                        android:inputType="text"
                        android:text="@{viewModel.businessFieldLiveData}"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_down"
                    android:id="@+id/iv_business_field_dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_business_field"
                    app:layout_constraintEnd_toEndOf="@+id/tl_business_field"
                    app:layout_constraintTop_toTopOf="@+id/tl_business_field" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_company_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_business_field">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_company_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Address"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_company_address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:inputType="text"
                        android:text="@{viewModel.cityLiveData}"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_down"
                    android:id="@+id/iv_city_dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_city"
                    app:layout_constraintEnd_toEndOf="@+id/tl_city"
                    app:layout_constraintTop_toTopOf="@+id/tl_city" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_company_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_city">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_company_phone_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Phone Number"
                        android:inputType="phone"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_salesman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_company_phone_no">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_salesman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Salesman"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_dealer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_salesman">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_dealer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dealer"
                        android:inputType="text"
                        android:theme="@style/TextInputLayoutHint" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_edit_account_detail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:background="@drawable/rounded_red_button"
                    android:text="Save"
                    android:textColor="@color/white"
                    app:layout_constraintCircleRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_dealer"
                    app:layout_constraintWidth_percent="0.7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>